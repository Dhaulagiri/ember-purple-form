{{#if isEditing}}
  <div class="row">
    <form {{action "toggleEditing" on="submit"}}>
      <div class="col-xs-6">
        {{yield}}
      </div>
      <button {{action 'submit'}} type="submit" class="btn btn-primary">
        Update
      </button>
      <button {{action toggleAction}} type="cancel" class="btn btn-default">
        Cancel
      </button>
    </form>
  </div>
{{else}}
  <span {{action toggleAction}}>
    {{value}}
  </span>
{{/if}}
