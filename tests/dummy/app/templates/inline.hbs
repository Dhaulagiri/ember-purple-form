<h1>Inline Form</h1>

<div class="col-xs-12">

  <h3>{{model.name}}</h3>

  <div class="row">
    <div class="col-sm-6">
      <div class="pull-left u-margin-Rl">
        {{em-gravatar email=model.email}}
      </div>
      <div class="email-input">
        {{#purple-inline
          value=model.email
          cancel="cancel"
          save="save"
        }}
          {{input
            class="form-control"
            id="inputEmail1"
            placeholder="Enter your Email address"
            value=model.email
          }}
        {{/purple-inline}}
      </div>
    </div>
    <div class="col-sm-6">
      <div class="pull-left u-margin-Rl">
        {{em-gravatar email=model.email}}
      </div>
      <div class="email-input">
        {{#purple-inline
          value=model.email
          valueProp="email"
          newValueProp="newEmail"
          cancel="cancel"
          save="save"
        }}
          {{input
            class="form-control"
            id="inputEmail2"
            placeholder="Enter your Email address"
            value=model.newEmail
          }}
        {{/purple-inline}}
      </div>
    </div>
  </div>
</div>
